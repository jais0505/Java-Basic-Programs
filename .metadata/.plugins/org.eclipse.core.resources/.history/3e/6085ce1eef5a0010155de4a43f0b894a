import java.util.Scanner;

public class SumofN {

	public static void main(String args[]) {
		
		Scanner s=new Scanner(System.in);
		
		System.out.println("Enter the limit:");
		
		int num=s.nextInt();
		
		int sum;
		
		for(int i=1;i<=num;i++) {
			sum=sum+i;
		}
		
		System.out.println("Sum of "+num+" number is="+sum);
	}
}
